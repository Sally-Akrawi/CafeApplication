

<div class="modal-body p-3 pt-0">

	<form>

		<label for="exampleInputEmail1" class="form-label flex-column">Food Name: </label>

		<div class="container">
			<div class="row">
				<div class="col-7">
					<input type="text" @bind-value="Food.FoodName" onkeypress="return /[a-z ]/i.test(event.key)" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
				</div>
			</div>
		</div>

		<label for="exampleInputPassword1" class="form-label mt-5">Price: </label>
		<div class="container">
			<div class="row">
				<div class="col-7 mb-4">
					<input @bind-value="Food.FoodPrice" type="text" class="form-control" id="exampleInputPassword1">
				</div>
			</div>
		</div>
	</form>
</div>

@code {

	[Parameter]
	public FoodMenu Food { get; set; }


}
